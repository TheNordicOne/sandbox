{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2022",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@angular/accessibility": [
        "libs/accessibility/src/index.ts"
      ],
      "@sandbox/utils": [
        "libs/shared/util/src/index.ts"
      ],
      "sandbox-accessibility": [
        "libs/accessibility/src/index.ts"
      ],
      "sandbox-forms": [
        "libs/forms/src/index.ts"
      ],
      "sandbox-infrastructure": [
        "libs/infrastructure/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
